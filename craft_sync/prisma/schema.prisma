generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  name        String?
  password    String
  role        Role      @default(CLIENT)
  projectsAsTeam Project[]  @relation("ProjectTeam")
  projectsAsClient Project[]  @relation("ProjectClient")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Invite {
  id    Int    @id @default(autoincrement())
  email String
  role  Role
  token String @unique
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  tasks       Task[]    // One project can have multiple tasks
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  teamMembers User[]    @relation("ProjectTeam")
  clients     User[]    @relation("ProjectClient")
}

model Task {
  id          Int       @id @default(autoincrement())
  name        String
  project     Project    @relation(fields: [projectId], references: [id])
  projectId   Int
}

enum Role {
  ADMIN
  TEAM
  CLIENT
}


